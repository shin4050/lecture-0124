
<p id="notice"><%= notice %></p>

<h1>サンプルアプリ2</h1>

<%= render 'form' %>

<table>
  <thead>
    <tr>
      <th>テキスト</th>
      <th>日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text %></td>
        <td><%= post.time %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>